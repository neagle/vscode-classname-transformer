{
  "name": "vscode-classname-transformer",
  "displayName": "className to classnames Transformer",
  "description": "Transforms selected React className strings into classnames([...]) expressions.",
  "version": "0.0.3",
  "publisher": "local",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:classnameTransformer.convertSelectionToClassnames"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "classnameTransformer.convertSelectionToClassnames",
        "title": "Convert className Strings to classnames()"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "install-extension": "code --install-extension ./$(node -p \"const p=require('./package.json'); p.name + '-' + p.version + '.vsix'\")",
    "package-and-install": "npm run package && npm run install-extension"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.7.2",
    "@vscode/vsce": "^3.2.2"
  }
}
